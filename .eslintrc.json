{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "standard",
  "installedESLint": true,
  "plugins": [ "standard", "babel" ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "space-before-function-paren": [ 2, "never" ],
    "babel/generator-star-spacing": 1
  }
}
